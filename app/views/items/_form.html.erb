<%= form_for (@item) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :price_publix %><br>
    <%= f.text_field :price_publix %>
  </div>

  <div class="field">
    <%= f.label :price_winn_dixie %><br>
    <%= f.text_field :price_winn_dixie %>
  </div>

  <div class="field">
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </div>

  <div class="field">
    <%= f.label :picture %><br>
    <%= f.file_field :picture %>
  </div>

  <div class="field">
    <%= f.label :list_id %>
    <%= f.collection_select(:list_id, List.all, :id, :name) %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
